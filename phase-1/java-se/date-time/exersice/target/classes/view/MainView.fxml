<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep10.app.controller.MainViewController">
   <children>
      <VBox alignment="CENTER" layoutX="189.0" layoutY="58.0" spacing="20.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">
         <children>
            <ComboBox fx:id="cmbtype" onAction="#cmbtypeOnAction" prefWidth="300.0" promptText="Select Type" />
            <Label fx:id="lblRate" alignment="CENTER" prefWidth="300.0" text="Select Type to Display the Rate">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <DatePicker fx:id="dtpIn" onAction="#dtpInOnAction" prefWidth="300.0" promptText="Select In date" />
            <DatePicker fx:id="dptOut" onAction="#dptOutOnAction" prefWidth="300.0" promptText="Select Out date" />
            <Label fx:id="lblHint" text="Label" />
            <Label fx:id="lblTotalDates" alignment="CENTER" prefWidth="300.0" text="Select In &amp; Out Dates">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="lblTotal" alignment="CENTER" prefWidth="300.0" style="-fx-font-weight: bold;" text="Total Price: ">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
